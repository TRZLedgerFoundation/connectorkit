{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true
      }
    },
    "organizeImports": {
      "enabled": true
    },
    "javascript": {
      "formatter": {
        "semicolons": "asNeeded",
        "quoteStyle": "single"
      }
    }
  }