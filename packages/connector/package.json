{
    "name": "@trezoa/connector",
    "version": "0.1.10",
    "description": "Headless wallet connector client and React provider built on Wallet Standard",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./headless": {
            "types": "./dist/headless.d.ts",
            "import": "./dist/headless.mjs",
            "require": "./dist/headless.js"
        },
        "./react": {
            "types": "./dist/react.d.ts",
            "import": "./dist/react.mjs",
            "require": "./dist/react.js"
        },
        "./compat": {
            "types": "./dist/compat.d.ts",
            "import": "./dist/compat.mjs",
            "require": "./dist/compat.js"
        }
    },
    "files": [
        "dist/**"
    ],
    "scripts": {
        "build": "tsup",
        "build:analyze": "npm run build && node scripts/analyze-bundle.js",
        "dev": "tsup --watch",
        "type-check": "tsc --noEmit",
        "lint": "prettier --check src/",
        "clean": "rm -rf dist",
        "size": "size-limit",
        "size:why": "size-limit --why",
        "perf": "npm run build:analyze && npm run size",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage"
    },
    "peerDependencies": {
        "@trezoa/web3.js": "^1.0.0",
        "react": ">=18.0.0",
        "@walletconnect/universal-provider": "^2.0.0"
    },
    "peerDependenciesMeta": {
        "react": {
            "optional": true
        },
        "@walletconnect/universal-provider": {
            "optional": true
        },
        "@trezoa/connector-debugger": {
            "optional": true
        },
        "@trezoa/web3.js": {
            "optional": true
        }
    },
    "dependencies": {
        "@trezoa-mobile/wallet-standard-mobile": "^0.4.3",
        "@trezoa/webcrypto-ed25519-polyfill": "^5.1.0",
        "@trezoa/addresses": "^5.0.0",
        "@trezoa/codecs": "^5.0.0",
        "@trezoa/keys": "^5.0.0",
        "@trezoa/kit": "^5.0.0",
        "@trezoa/signers": "^5.0.0",
        "@trezoa/transaction-messages": "^5.0.0",
        "@trezoa/transactions": "^5.0.0",
        "@wallet-standard/app": "^1.1.0",
        "@wallet-standard/base": "^1.1.0",
        "@wallet-standard/features": "^1.1.0",
        "@wallet-ui/core": "^2.1.0",
        "zod": "^4.0.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/react": "^19.2.2",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "happy-dom": "^20.0.7",
        "react": "^19.2.1",
        "react-dom": "^19.2.1",
        "tsup": "^8.5.0",
        "typescript": "^5.9.3",
        "vitest": "^3.2.4"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/trezoa-foundation/connectorkit"
    }
}
